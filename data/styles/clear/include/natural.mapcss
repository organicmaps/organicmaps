/* land */

area|z0-9[natural=land]
{
	fill-opacity: 1;
	fill-color: @background;
	z-index: 0;
}

area|z10-[natural=land]
{
	fill-opacity: 1;
	fill-color: @background;
	z-index: 0;
}

/* glacier */
area|z0-[natural=glacier]
{
  fill-color: @glacier;
  z-index: 1;
}

/* water */

area|z0-10[natural=coastline]
{
  fill-color: @water;
	fill-position: background;
	opacity: 1;
  z-index: -1000;
}

area|z11-19[natural=coastline]
{
  fill-color: @water;
	fill-position: background;
	opacity: 1;
  z-index: -1000;
}

area|z10-19[natural=coastline]
{
  fill-color: @water;
	fill-position: background;
  z-index: -1000;
}
