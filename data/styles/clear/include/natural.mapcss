{
  fill-color: @water;
  z-index: 100;
}


area|z11-[natural=wetland] {
	z-index: 49;
	fill-opacity: 0.3;
	fill-color: @water;
}

/* rivers */

line|z10[waterway=river],
line|z10[waterway=riverbank] {
	width: 0.6;
	opacity: 1;
	color: @river;
	z-index: 50;
}

line|z11-12[waterway=river],
line|z11-12[waterway=riverbank] {
	width: 0.8;
	opacity: 1;
	color: @river;
	z-index: 50;
}

line|z13-14[waterway=stream],
line|z13-14[waterway=canal]{
	width: 0.2;
	opacity: 1;
	color: @river;
	z-index: 50;
}

line|z13-14[waterway=stream][intermittent=yes] {
	dashes: 2.7,2.7;
	z-index: 49;
}

line|z13-14[waterway=river] {
	width: 1.2;
	opacity: 1;
	color: @river;
	z-index: 50;
}

line|z13-14[waterway=riverbank] {
	width: 1.2;
	opacity: 1;
	color: @river;
	z-index: 50;
}
line|z15-[waterway=stream],
line|z15-[waterway=canal]
 {
	width: 1;
	opacity: 1;
	color: @river;
	z-index: 50;
}

line|z15-[waterway=stream][intermittent=yes] {
	dashes: 4.95;
	width: 1;
	opacity: 1;
	color: @river;
	z-index: 49;
}
line|z15-[waterway=river] {
	width: 1.8;
	color: @river;
	z-index: 50;
}

line|z15-[waterway=riverbank] {
	width: 1.8;
	color: @river;
	z-index: 50;
}


area|z15-[waterway=dam],
line|z15-[waterway=dam],
line|z15-[waterway=wair],
 {
	width: 1;
	opacity: 1;
	color: @bridge_casing;
	z-index: 110;
}
line|z16-[waterway=canal]
{
	width: 1.5;
	color: @river;
	z-index: 50;
}
line|z17-[waterway=ditch] {
	width: 1.8;
	opacity: 1;
	color: @river;
	z-index: 50;
	dashes: 0.9,0.9;
}

