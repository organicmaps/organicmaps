<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:wheel="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="horizontal"
  android:minHeight="@dimen/downloader_status_size"
  android:background="?clickableBackground"
  android:paddingLeft="@dimen/margin_half"
  android:paddingRight="@dimen/margin_half"
  android:gravity="center_vertical"
  android:baselineAligned="false">
  <FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/margin_half">
    <com.mapswithme.maps.widget.WheelProgressView
      android:id="@+id/progress"
      android:layout_width="@dimen/downloader_status_size"
      android:layout_height="@dimen/downloader_status_size"
      android:visibility="gone"
      tools:visibility="visible"
      wheel:wheelProgressColor="?colorAccent"
      wheel:wheelSecondaryColor="?dividerHorizontal"
      wheel:wheelThickness="@dimen/margin_eighth"/>

    <ImageView
      android:id="@+id/status"
      android:layout_width="@dimen/downloader_status_size"
      android:layout_height="@dimen/downloader_status_size"
      android:scaleType="center"
      android:background="?clickableBackground"
      android:duplicateParentState="false"
      android:visibility="gone"
      tools:visibility="visible"
      tools:src="@drawable/downloader_download"/>
  </FrameLayout>

  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_half"
    android:paddingBottom="@dimen/margin_half"
    android:gravity="center_vertical">
    <TextView
      android:id="@+id/name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@style/MwmTextAppearance.Body1"
      android:singleLine="true"
      tools:text="Moscow"/>

    <TextView
      android:id="@+id/parent"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@style/MwmTextAppearance.Body3"
      android:singleLine="true"
      tools:text="Russia"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_half"
    android:paddingBottom="@dimen/margin_half"
    android:gravity="right">
    <TextView
      android:id="@+id/sizes"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@style/MwmTextAppearance.Body3"
      tools:text="200 MB"/>

    <TextView
      android:id="@+id/counts"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@style/MwmTextAppearance.Body3"
      tools:text="10"/>
  </LinearLayout>
</LinearLayout>
