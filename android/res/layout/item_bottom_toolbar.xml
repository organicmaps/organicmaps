<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/clickableBackground">

  <ImageView
      android:id="@+id/iv__bottom_icon"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/bottom_item_height"
      android:layout_centerVertical="true"
      android:paddingLeft="@dimen/margin_small"/>

  <TextView
      android:id="@+id/tv__bottom_item_text"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/bottom_item_height"
      android:layout_toRightOf="@id/iv__bottom_icon"
      android:layout_marginLeft="@dimen/margin_small"
      android:gravity="center_vertical"
      android:textColor="@android:color/white"/>

  <View
      style="@style/MwmWidget.DividerMediumPadded"
      android:layout_below="@id/tv__bottom_item_text"/>

</RelativeLayout>